@inherits LayoutComponentBase

<!-- Required -->
<MudThemeProvider />
<MudPopoverProvider />

<!-- Needed for dialogs -->
<MudDialogProvider />

<!-- Needed for snackbars -->
<MudSnackbarProvider />

<MudLayout style="background-color: #f5f8fb">
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h4" Class="ml-3">Ale Ink</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" 
                       Href="https://www.linkedin.com/in/stephen-mclemore-dev217/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" 
                       Href="https://github.com/STMcLemore" Target="_blank" />
    </MudAppBar>

    
        <MudDrawerContainer Color="Color.Dark">
            <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" Variant="@DrawerVariant.Persistent" Color="Color.Dark">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">Notes Menu</MudText>
                </MudDrawerHeader>
                <MudNav />
            </MudDrawer>
        </MudDrawerContainer>
    <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}








